{
  "extends": "@react-native/typescript-config/tsconfig.json",

  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true, // Enable this flag
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["app/*"],
      "react": ["./node_modules/@types/react"]
      //  "tests": ["tests/*"],
      //   "@components/*": ["src/components/*"],
    }
  }
}
